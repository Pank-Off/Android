<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSky</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textInList">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">casual|bold</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="HourlyAndWeekend">
        <item name="android:background">@color/colorCitySky</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainWeather">
        <item name="android:background">@color/colorSky</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="MainGrad">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">66sp</item>
    </style>

    <style name="MainCity">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="Weekday">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="gradDay">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>
</resources>
