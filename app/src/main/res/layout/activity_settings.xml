<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:text="@string/unit"
                android:textAlignment="textStart"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:text="@string/auto_refresh"
                android:textAlignment="textStart"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:text="@string/use_current_location"
                android:textAlignment="textStart"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:text="@string/notification"
                android:textAlignment="textStart"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:text="@string/show_on_widget"
                android:textAlignment="textStart"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:text="@string/refresh_when_app_opens"
                android:textAlignment="textStart"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:text="@string/weather_alerts"
                android:textAlignment="textStart"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:text="@string/add_weather_icon"
                android:textAlignment="textStart"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:text="@string/customization_service"
                android:textAlignment="textStart"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:text="@string/about_weather"
                android:textAlignment="textStart"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>
    </ScrollView>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>