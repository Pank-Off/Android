<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/input_current_city"
                android:inputType="text"
                tools:ignore="Autofill" />

            <Button
                android:id="@+id/selectBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/select" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/wind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wind"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/airpress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/airpressure"
            android:textSize="24sp" />

        <Button
            android:id="@+id/moscow"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/moscow"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/tokio"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/paris"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/ny"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/kiev"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/berlin"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/madrid"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/istambul"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/london"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/tallinn"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>
</ScrollView>