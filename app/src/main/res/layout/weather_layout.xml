<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSky">

        <LinearLayout
            android:id="@+id/linlay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/firstLay"
                style="@style/MainWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/city"
                    style="@style/MainCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/moscow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wed_10_march_14_04"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/weatherToday"
                    style="@style/MainGrad"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/_8_u00b0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/cloudy"
                    android:textSize="24sp" />

                <CheckBox
                    android:id="@+id/details_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/details" />

                <TextView
                    android:id="@+id/detailsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp" />


            </LinearLayout>

            <TextView
                style="@style/HourlyAndWeekend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/daily" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/HourRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorCitySky" />

            <TextView
                style="@style/HourlyAndWeekend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="@string/hourly" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/weekendRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorCitySky" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>